	<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
		<div id="sticky-header">
			<section id="promo" class="promo-msg flexslider">
				<ul class="slides">
					<li>Take 40% off using the promo code <strong>SHOPSMALL2014</strong>. Offer ends 12/1.</li>
					<li>You are fearfully and wonderfully made. You are <strong>#UniquelyBeautiful!</strong></li>
				</ul>
			</section>
			<a href="/cart" title="You have {{ cart.item_count }} #UniquelyBeautiful {{ cart.item_count | pluralize: 'item', 'items' }} ({{ cart.total_price | money }}) in your shopping bag." id="cart"><span class="qty">{{ cart.item_count }}</span></a>
		</div>
<!--/#sticky-header -->










		<header id="header">
			<section id="acct" class="container">
{% if shop.customer_accounts_enabled %}
	{% if customer %}
				Hello, <strong>{{ customer.first_name }}</strong> &nbsp;|&nbsp; <a href="/account">My Account</a> &nbsp;|&nbsp; {{ 'Log Out' | customer_logout_link }}
	{% else %}
				Please {{ 'log in' | customer_login_link }},
		{% if shop.customer_accounts_optional %}
				{{ 'create an account' | customer_register_link }},
		{% endif %}
				or simply shop as our guest.
	{% endif %}
{% endif %}
			</section>
<!--/#acct -->
			<section class="branding">
				<a href="/"><img src="{{ 'logo-w-tagline-light-bg.png' | asset_url }}" alt="Pamela Kay | Hand made ~ like you" title="Pamela Kay | Hand made ~ like you" class="logo"></a>
			</section>
<!--/#branding -->
			<nav id="topnav">
				<ul>
{% for link in linklists.main-menu.links %}
	{% assign has_sub_menu = false %}
	{% assign has_sub_categories = false %}
	{% assign parent_link_active = false %}
	{% assign child_list_handle = link.title | handle %}
	{% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
		{% assign has_sub_menu = true %}
		{% for l in linklists[child_list_handle].links %}
			{% if page_title == l.title %}
				{% assign parent_link_active = true %}
			{% endif %}
		{% endfor %}
	{% elsif link.type == 'collection_link' and link.object.all_tags.size > 0 %}
		{% assign has_sub_categories = true %}
	{% endif %}
					<li class="nav-item{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}{% if link.active or parent_link_active %} active{% endif %}{% if has_sub_menu or has_sub_categories %} has-dropdown{% endif %}">
						{{ link.title | link_to: link.url }}
	{% if has_sub_menu or has_sub_categories %}
						<ul class="sub-nav">
							<li class="sub-nav-niblet"></li>
		{% if has_sub_menu %}
			{% for l in linklists[child_list_handle].links %}
							<li class="sub-nav-item{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}{% if l.active %} active{% endif %}"><a class="{% if forloop.first %}first{% elsif forloop.last %}last{% endif %}" href="{{ l.url }}">{{ l.title }}</a></li>
			{% endfor %}
		{% elsif has_sub_categories %}
			{% for tag in link.object.all_tags %}
							<li class="sub-nav-item{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}{% if current_tags contains tag %} active{% endif %}"><a class="{% if forloop.first %}first{% elsif forloop.last %}last{% endif %}" href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a></li>
			{% endfor %}
		{% endif %}
						</ul>
	{% endif %}
					</li>
{% endfor %}
				</ul>
			</nav>
<!--/#topnav -->
		</header>
<!--/body > #header -->










		<div id="content" class="container">
{% comment %}} We have a template file to render. That's what content_for_layout is for. {% endcomment %}
			{{ content_for_layout }}
		</div>
<!--/#content -->



	






		<footer id="footer">
			<section class="search">
				<div class="container">
					<h4>Can't find what you're looking for?</h4>
					<form action="/search" method="get" class="search-form right" role="search">
						<input name="q" type="search" id="search-field" placeholder="Type keywords like 'brown clutch'" value="{{ search.terms | escape }}">
						<input type="submit" id="search-submit" value="Search">
					</form>
				</div><!--/.container -->
			</section><!--/.search -->
			<section id="social" class="container">
				<h3>Let's connect</h3>
				<p>We delight in discovering all things <strong>#UniquelyBeautiful</strong>. We know you do too, and invite you to share that&nbsp;experience&nbsp;with&nbsp;us.</p>
				<ul>
					<li><a href="http://www.pinterest.com/bypamelakay/" target="_blank"><img src="{{ 'pinterest-icon.png' | asset_url }}" alt="Pinterest" title="Pinterest"></a></li><li><a href="http://www.facebook.com/bypamelakay" target="_blank"><img src="{{ 'facebook-icon.png' | asset_url }}" alt="Facebook" title="Facebook"></a></li><li><a href="http://twitter.com/ByPamelaKay" target="_blank"><img src="{{ 'twitter-icon.png' | asset_url }}" alt="Twitter" title="Twitter"></a></li><li><a href="http://plus.google.com/102122612522798062693" target="_blank"><img src="{{ 'google-plus-icon.png' | asset_url }}" alt="Google+" title="Google+"></a></li>
				</ul>
			</section>
<!--/#social -->
